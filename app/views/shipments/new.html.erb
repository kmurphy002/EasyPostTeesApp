<% flash.each do |key, value| %>
<div class="alert alert-danger" role="alert"><%= value %></div>

<% @shipment.errors.full_messages.each do |msg| %>
<div class="alert alert-danger" role="alert"><%= msg %></div>
<% end %>
<% end %>

<h1>Create A Shipment</h1>

<div class='row'>

<div class='col-xs-12'>

<%= form_for @shipment, html: {class: "form-horizontal", role: "form"} do |f| %>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :name %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :name, class: "form-control", placeholder: "First & Last Name", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :company %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :company, class: "form-control", placeholder: "Your Company Name"%>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :address %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :address, class: "form-control", placeholder: "ex. 12 Circus Dr."%>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :city %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :city, class: "form-control", placeholder: "ex. West Henrietta"%>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :state %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :state, class: "form-control", placeholder: "ex. CA"%>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-1">
     <%= f.label :zip %></br>
  </div>

  <div class="col-sm-4">
    <%= f.text_field :zip, class: "form-control", placeholder: "ex. 14586"%>
  </div>
</div>

<div class="form-group">

<div class="col-sm-offset-1 col-sm-10">

<%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

</div>

</div>
